<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project5.snakeintheforest">
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.StartMenuActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.ChooseLevelMenuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.GameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.GameOverActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.PauseActivity"
            android:theme="@style/Theme.Transparent" />
        <activity
            android:name=".Activities.LeaderboardActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>